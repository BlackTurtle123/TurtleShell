@import '../../styles/colors.styl';

.content
  padding: 14px;

.wallet
  width: 100%;
  background: $white;
  display: flex;
  box-shadow: 0 2px 4px 0 rgba(155, 166, 178, 0.4);
  border-radius: 4px;
  padding: 14px;
  flex-wrap: wrap;
  position: relative;
  z-index: 1;
  margin-bottom: 8px;
  cursor: pointer;
  height: 64px;

  .balanceWrapper
    justify-content: flex-start;


  .controls
    margin-top: 0;
    position: absolute;
    bottom: 18px;
    right: 14px;
    border: 1px dashed $basic200;
    display: block;
    border-radius: 2px;
    font-size: 12px;

    .accountIconTooltip
      display: none;
      right: 0;
      white-space: nowrap;
      opacity: 0;
      top: -42px;

    &:hover
      background-color: $basic50;
      border: 1px solid $basic200;

      .accountIconTooltip
        display: block;
        opacity: 1;

    div, .accountIcon
      padding: 0;
      border: 0 none;

    .accountIcon
      position: relative;
      &:hover
        background-color: $basic100;

.activeWallet
  width: 100%;

  .wallet
    height: 112px;
    margin-bottom: 0;
    z-index: 3;

    .accountData
      .accountName
        max-width: 245px;

    .controls
      width: 100%;
      margin-top: 18px;
      position: relative;
      bottom: 0;
      right: 0;
      display: flex;
      border-color: transparent;

      .accountIconTooltip
        display: none;

      &:hover
        background-color: transparent;
        border-color: transparent;

      div
        padding: 0 8px 0 28px;
        background-color: $basic50;
        border: 0.5px solid  $basic100;
        height: 26px;
        border-radius: 2px;
        margin-right: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: normal;

        &:not(:last-child):hover
          background-color: $basic100;

      .accountIcon
        position: absolute;
        padding: 0;
        right: 0;
        bottom: 0;
        width: 30px;
        height: 26px;
        background-color: transparent;
        border-color: transparent;
        margin-right: 0;

.activeWalletSelected
  &.activeAccountHeader
    width: auto;

.accountIcon
  width: 28px;
  height: 26px;

.title
  color: $disabled200;

.activeAccountHeader
  color: $white;
  margin: 0 0 8px 0;
  position: relative;
  z-index: 1;

.inner
  flex-wrap: wrap;

.avatar
  margin-right: 14px;
  display: flex;
  & > div
    border: 0 none;

  img
    margin: 0;

.accountData
  flex-grow: 1;
  text-align: left;

  .accountName
    height: 24px;
    max-width: 220px;
    overflow: hidden;
    text-overflow: ellipsis;

  div
    height: 16px;

.showQrIcon
  background: url(../../assets/img/qr-14-black.svg) 8px 5px no-repeat;

.copyIconBlack
  display: block;
  cursor: pointer;
  background: url(../../assets/img/copy-14-black.svg) 8px 5px no-repeat $basic50;

// custom wallet design in transactions
.txWallet
  border-radius: 0;
  flex-wrap: nowrap;
  box-shadow: none;
  height: 48px;
  cursor: default;
  margin: 0;
  border-bottom: 1px solid $basic100;

  .avatar
    margin-right: 8px;

  .accountName
    height: 14px;

  .controls
    bottom: 50%;
    width: 18px;
    height: 18px;
    border: 0 none;
    transform: translateY(50%);

    &:hover
      border: 0 none;
      background-color: transparent;

    button
      background: url(../../assets/img/changeaccount-18-basic-500.svg) center no-repeat transparent;
      width: 100%;
      height: 100%;
      border-radius: 0;

      &:hover
        background-color: transparent !important; // todo @uIsk / remove !important

.bigWalet
  &.txWallet
    border-bottom: 0 none;
    height: auto;
    padding: 12px 20px;
    border-top: 1px dashed $basic200;

    .avatar
      margin-right: 10px;

    .accountName
      font-size: 14px;
      line-height: 20px;
      height: 20px;

    .accountAddress
      font-size: 11px;
      line-height: 20px;
