@import '../../../styles/colors.styl';

.transaction
  display: flex;
  flex-direction: column;
  position: relative;
  height: 100%;

  .txBalanceWrapper
    display: flex;
    flex-wrap: wrap;
    justify-content: center;

  .txRow
    width: 100%;
    min-height: 60px;
    display: flex;
    padding: 10px 0;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    word-break: break-all;
    text-align: left;
    font-size: 12px;

    &:last-child
      padding-bottom: 20px;

    &.bordered
      border-top: 1px dashed $basic200;
      border-bottom: 1px dashed $basic200;

      &Top
        border-top: 1px dashed $basic200;
        border-bottom: 0 none;

      &Bottom
        border-bottom: 1px dashed $basic200;
        border-top: 0 none;

    & + .txRow
      border-top: 1px dashed $basic200;

    &Description
      padding-bottom: 0px;

    &Description + .txRow
      border-top: 0 none;

  .txScrollBox
    overflow: auto;
    position: relative;
    padding: 0 24px;
    flex-grow: 1;
    flex-shrink: 999;

  .toggleList
    border-top: 1px dashed $basic200;

    button
      color: $submit300;
      font-size: 12px;
      display: inline-block;
      margin-top: 8px;

      span
        margin-left: 3px;
        display: inline-block;

  .txIcon
    div
      width: 48px;
      height: 48px;
      margin: 24px auto 0 auto;
    &Big
      div
        width: 80px;
        height: 80px;
        margin: 64px auto 14px auto;

  .txBalance
    width: 100%;
    margin: 0 auto 36px auto;
    white-space: nowrap;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: 400;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;

    &.block
      display: block;

    span:first-child
      font-weight: 600;

.txButtonsWrapper
  width: 100%;
  flex-shring: 0;
  padding: 14px 14px 0 14px;
  background: $white;
  border-top: 1px solid $basic100;
  text-align: center;
  flex-wrap: wrap;

  button
    margin-bottom: 14px;

.txBigIcon
  width: 80px;
  height: 80px;
  margin: 44px auto 4px auto;

.txFinal
  margin: 0 auto;

  .finalTxContent
    margin: 0 24px;

  .finalTxPlate {
    overflow: auto;
    max-height: 240px;
  }

  .txInfoRow
    display: flex;
    align-items: center;
    padding: 12px 0 12px 20px;
    border-top: 1px dashed $basic200;
    border-bottom: 1px dashed $basic200;

    .icon
      min-width: 48px;
      height: 48px;
      margin-right: 10px;

    .data
      flex-grow: 1;
      line-height: 20px;

  .closeBtn
    margin: 44px auto 0 auto;

  .nextBtn
    margin: 22px auto 0 auto;

.txSign
  .infoBlock
    margin: 0 0 24px 0;

  .iconMargin
    margin: 64px auto 4px auto;

  .appName
    max-width: 100%;
    word-break: break-all;

.originWarning
  flex-basis: 100%;
  overflow: auto;
  max-height: 120px;

  &::after
    display: block;
    width: 100%;
    height: 14px;
    content: '';

  div:first-child
    text-decoration: underline;
    padding-bottom: 2px;

.showAllScript
  max-height: none;
  div:first-child
    max-height: none;
